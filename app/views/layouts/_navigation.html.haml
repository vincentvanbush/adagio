        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Home', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Advanced search', search_url, class: 'navbar-brand'
      = form_tag auctions_path, method: 'get', class: 'navbar-form form-inline pull-right' do
        = text_field_tag 'title', '', placeholder: 'Search all auctions', class: 'form-control'
        = submit_tag "Search", name: nil, class: "btn btn-default"
